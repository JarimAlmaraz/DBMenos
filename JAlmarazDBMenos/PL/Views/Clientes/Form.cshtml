@model ML.Clientes
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>AÑADIR NUEVO CLIENTE</h2>
            <h5>Ingrese los datos del Cliente:</h5>
        </div>
    </div>

        @using (Html.BeginForm("Form", "Clientes", FormMethod.Post, new { enctype = "multipart/form-data" }))
        { 
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.IdCliente, new { @class = "hidden" })
                    @Html.TextBoxFor(model => model.IdCliente, new { @class = "hidden form-control", autocomplete = "off" })
                    @Html.ValidationMessageFor(model => model.IdCliente)
                </div>
            </div>
            
            <div class="row">
                        <div class="col-md-4 col-xs-12 col-sm-6">
                            @Html.LabelFor(model => model.Nombre)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-font"></i></span>
                                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "txtNombre" })
                                @Html.ValidationMessageFor(model => model.Nombre)
                            </div>
                        </div>

                <div class="col-md-4 col-xs-12 col-sm-6">
                    @Html.LabelFor(model => model.Telefono)
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", @id = "txtTelefono" })
                        @Html.ValidationMessageFor(model => model.Telefono)
                    </div>
                </div>

                        <div class="col-md-4 col-xs-12 col-sm-6">
                            @Html.LabelFor(model => model.UltimoPago)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-repeat"></i></span>
                                @Html.TextBoxFor(model => model.UltimoPago, new { @class = "form-control", @id = "txtUltimoPago" })
                                @Html.ValidationMessageFor(model => model.UltimoPago)
                            </div>
                        </div>
                    </div>
                <br/>
            
            <div class="col-md-4 col-xs-12 col-sm-6">
                <input type="submit" value="Guardar" class="btn btn-success" />
                @Html.ActionLink("Regresar", "GetAll", "Usuario", htmlAttributes: new { @class = "btn btn-danger" })
            </div>
        }

</div>



<script type="text/javascript">
    var j = jQuery.noConflict();

    j(function () {
        j("#txtUltimoPago").datepicker({
            dateFormat: 'dd-mm-yy',
            showOn: 'button',
            buttonImage: "../Imagen/Calendario.png",
            buttonImageOnly: true,
            changeMonth: true,
            changeYear: true

        });
        $(".ui-datepicker-trigger").css("width", "30px");
        $(".ui-datepicker-trigger").css("height", "30px");
    });

</script>